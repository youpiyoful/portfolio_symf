{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block header %}
    {{ knp_menu_render('main') }}
{% endblock %}

{% block main %}
    <h1>Category index</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCategory }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-primary">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="badge badge-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class='row'>
        <div class='col-10'></div>
        <a href="{{ path('category_new') }}" class='btn btn-primary col-1'>new</a>
    </div>

{% endblock %}