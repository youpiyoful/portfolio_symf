{% extends 'base.html.twig' %}

{% block title %}Competence index{% endblock %}

{% block header %}
    {{ knp_menu_render('main') }}
{% endblock %}

{% block main %}
    <h1>Competence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_competence</th>
                <th>Img_comp</th>
                <th>Texte_competence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.nameCompetence }}</td>
                <td>{{ competence.imgComp }}</td>
                <td>{{ competence.texteCompetence }}</td>
                <td>
                    <a href="{{ path('competence_show', {'id': competence.id}) }}" class="badge badge-primary">show</a>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}" class="badge badge-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class='row'>
        <div class='col-10'></div>
        <a href="{{ path('competence_new') }}" class='btn btn-primary'>new</a>
    </div>
{% endblock %}